{% extends "layout.twig" %}

{% block content %}
    <h1>Bienvenue sur Resto App</h1>

    {% if connected %}
        <div class="card">
            <h3>Accès rapide</h3>
            <a class="btn" href="/restaurant/index">Voir les restaurants</a><br>
            <a class="btn" href="/reservation/index">Mes réservations</a>
        </div>
    {% else %}
        <div class="card">
            <h3>Connexion requise</h3>
            <a class="btn" href="/login/index">Connexion</a><br>
            <a class="btn" href="/register/index">Inscription</a>
        </div>
    {% endif %}
{% endblock %}
